<Window x:Class="DocumentsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DocumentsGenerator.Controls"
        xmlns:viewModel="clr-namespace:DocumentsGenerator.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="980"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        PreviewMouseDown="Window_PreviewMouseDown">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>

            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Template" Value="{DynamicResource VerticalScrollBar}"/>
                </Trigger>
    
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Template" Value="{DynamicResource HorizontalScrollBar}"/>
                </Trigger>

            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid>

                <Border Background="#0E0E1B" Width="10"/>

                <Track x:Name="PART_Track" IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
             
                        <RepeatButton
                        Margin="3"
                        Command="ScrollBar.PageUpCommand"
                        Style="{StaticResource ScrollBarTrackVertical}"/>
                    </Track.DecreaseRepeatButton>

                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumbVertical}"/>
                    </Track.Thumb>

                    <Track.IncreaseRepeatButton>
         
                        <RepeatButton
                        Margin="3"
                        Command="ScrollBar.PageDownCommand"
                        Style="{StaticResource ScrollBarTrackVertical}"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid>

                <Border Background="#0E0E1B" Height="10"/>

                <Track x:Name="PART_Track" IsDirectionReversed="False" Orientation="Horizontal">
                    <Track.DecreaseRepeatButton>

                        <RepeatButton
                        Margin="3"
                        Command="ScrollBar.PageLeftCommand"
                        Style="{StaticResource ScrollBarTrackHorizontal}"/>
                    </Track.DecreaseRepeatButton>

                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumbHorizontal}"/>
                    </Track.Thumb>

                    <Track.IncreaseRepeatButton>

                        <RepeatButton
                        Margin="3"
                        Command="ScrollBar.PageRightCommand"
                        Style="{StaticResource ScrollBarTrackHorizontal}"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="#272547"
            CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border x:Name="DragBar"
                    Background="#0E0E1B"
                    Grid.ColumnSpan="2"
                    MouseDown="DragBar_MouseDown"
                    CornerRadius="5 5 0 0"/>

            <Border x:Name="LogoBar"
                    Background="{Binding MainMenuColor}"
                    Grid.Row="1">
                <controls:IconRadioButton x:Name="HomeMenuBtn"
                      Content="Generator dokumentów"
                      IconImage="/Images/app-logo.png"
                      SelectedColor="Transparent"
                      Height="75"
                      Foreground="White"
                      FontSize="16"
                      FontWeight="Medium"
                      IsChecked="True"
                      Click="HomeMenuBtn_Click"
                      Style="{StaticResource MenuButtonTheme}"
                      Command="{Binding HomeViewCommand}"/>
            </Border>


            <Border x:Name="MenuButtonList"
                    Grid.Row="2"
                    Background="#22203D"
                    CornerRadius="0 0 0 5">

                <StackPanel>
                    <controls:IconRadioButton x:Name="TemplateMenuBtn"
                        Content="Szablony"
                        IconImage="/Images/template-icon.png"
                        SelectedColor="#40A7AE"
                        Height="50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Medium"
                        Style="{StaticResource MenuButtonTheme}"
                        Command="{Binding TemplateViewCommand}"/>



                    <controls:IconRadioButton x:Name="SheetMenuBtn"
                        Content="Arkusze danych"
                        IconImage="/Images/sheet-icon.png"
                        SelectedColor="#88AC4C"
                        Height="50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Medium"
                        Style="{StaticResource MenuButtonTheme}"
                        Command="{Binding SheetViewCommand}"/>


                    <controls:IconRadioButton x:Name="DokumentMenuBtn"
                        Content="Dokumenty"
                        IconImage="/Images/document-icon.png"
                        SelectedColor="#7C438E"
                        Height="50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Medium"
                        Style="{StaticResource MenuButtonTheme}"
                        Command="{Binding DocumentViewCommand}"/>

                    <controls:IconRadioButton x:Name="SettingsMenuBtn"
                        Content="Ustawienia"
                        IconImage="/Images/settings-icon.png"
                        SelectedColor="#7C7C7C"
                        Height="50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Medium"
                        Style="{StaticResource MenuButtonTheme}"
                        Command="{Binding SettingsViewCommand}"/>
                </StackPanel>

            </Border>

            

            <ContentControl x:Name="MainView"
                            Grid.Column="1"
                            Grid.Row="2"
                            Content="{Binding CurrentView}"/>

            <Border x:Name="Navbar"
                    Grid.Column="1"
                    Grid.Row="1"
                    Background="{Binding NavbarColor}"
                    MouseDown="DragBar_MouseDown">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                    <controls:NavbarButton x:Name="MinimiseBtn"
                        Width="30"
                        Height="30"
                        Foreground="White"
                        IconImage="/Images/minimise-icon.png"
                        Click="MinimiseBtn_Click"
                        Style="{StaticResource NavbarButtonTheme}"/>
                    <controls:NavbarButton x:Name="MaximiseBtn"
                        Width="30"
                        Height="30"
                        Foreground="White"
                        IconImage="/Images/maximise-icon.png"
                        Click="MaximiseBtn_Click"
                        Style="{StaticResource NavbarButtonTheme}"/>
                    <controls:NavbarButton x:Name="CloseBtn"
                        Width="30"
                        Height="30"
                        Foreground="White"
                        IconImage="/Images/close-icon.png"
                        Click="CloseBtn_Click"
                        Style="{StaticResource NavbarButtonTheme}"/>
                </StackPanel>
                
            </Border>


        </Grid>

    </Border>

</Window>
