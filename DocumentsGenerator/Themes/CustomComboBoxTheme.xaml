<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brushes -->
    <SolidColorBrush x:Key="Combo.Bg"           Color="#4B4789"/>
    <SolidColorBrush x:Key="Combo.Border"       Color="#3A3A3A"/>
    <SolidColorBrush x:Key="Combo.Bg.Hover"     Color="#4B4789"/>
    <SolidColorBrush x:Key="Combo.Bg.Pressed"   Color="#4B4789"/>
    <SolidColorBrush x:Key="Combo.Arrow"        Color="#CCCCCC"/>
    <SolidColorBrush x:Key="Combo.Text"         Color="White"/>
    <SolidColorBrush x:Key="Combo.Drop.Bg"      Color="#4B4789"/>
    <SolidColorBrush x:Key="Combo.Item.Hover"   Color="#6F6CA1"/>
    <SolidColorBrush x:Key="Combo.Item.Text"    Color="White"/>

    <!-- If you use the subclass -->
    <!-- <Style x:Key="CustomComboBox" TargetType="{x:Type local:CommitEditableComboBox}"> -->

    <!-- Or for a regular ComboBox -->
    <Style x:Key="CustomComboBox" TargetType="{x:Type ComboBox}">
        <Setter Property="Foreground" Value="{StaticResource Combo.Text}"/>
        <Setter Property="Background" Value="{StaticResource Combo.Bg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Combo.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>

                                <!-- When NOT editable -->
                                <ContentPresenter x:Name="ContentSite"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  RecognizesAccessKey="True"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  IsHitTestVisible="False"/>

                                <!-- When IS editable -->
                                <TextBox x:Name="PART_EditableTextBox"
                                         Margin="{TemplateBinding Padding}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{StaticResource Combo.Text}"
                                         CaretBrush="{StaticResource Combo.Text}"
                                         HorizontalContentAlignment="Left"
                                         VerticalContentAlignment="Center"
                                         Visibility="Collapsed"
                                         Focusable="True"
                                         Text="{TemplateBinding Text}"
                                         />

                                <!-- Arrow -->
                                <Path x:Name="ArrowGlyph"
                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                      Stretch="Uniform"
                                      Grid.Column="1"
                                      Fill="{StaticResource Combo.Arrow}"
                                      Width="10"
                                      Height="6"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

                                <!-- Full-area toggle to open/close dropdown -->
                                <ToggleButton x:Name="MainClickCatcher"
                                              Grid.ColumnSpan="2"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Focusable="False"
                                              Opacity="0"
                                              ClickMode="Press"
                                              IsHitTestVisible="True"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                            </Grid>
                        </Border>

                        <!-- Popup (must be named PART_Popup) -->
                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               AllowsTransparency="True"
                               Focusable="False"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               PopupAnimation="Fade"
                               StaysOpen="False">
                            <Border x:Name="DropDownBorder"
                                    Background="{StaticResource Combo.Drop.Bg}"
                                    BorderBrush="{StaticResource Combo.Border}"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer Margin="0"
                                              SnapsToDevicePixels="True">
                                    <!-- Items host -->
                                    <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Triggers -->
                    <ControlTemplate.Triggers>

                        <!-- Hover/pressed/focus visuals -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="{StaticResource Combo.Bg.Hover}"/>
                        </Trigger>

                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="{StaticResource Combo.Bg.Pressed}"/>
                            <Setter TargetName="Border"
                                    Property="BorderBrush"
                                    Value="{StaticResource Combo.Border}"/>
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Border"
                                    Property="BorderBrush"
                                    Value="#6B61C8"/>
                        </Trigger>

                        <!-- Editable mode: show textbox, hide content presenter -->
                        <Trigger Property="IsEditable" Value="True">
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                            <!-- Prevent the overlay toggle button from stealing text clicks -->
                            <Setter TargetName="MainClickCatcher" Property="IsHitTestVisible" Value="False"/>
                        </Trigger>

                        <!-- Re-enable click catcher when dropdown is closed and not focused in the edit box -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEditable" Value="True"/>
                                <Condition Property="IsDropDownOpen" Value="False"/>
                                <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainClickCatcher" Property="IsHitTestVisible" Value="True"/>
                        </MultiTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Items -->
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ComboBoxItem}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource Combo.Item.Text}"/>
                    <Setter Property="Padding" Value="6,3"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                <Border x:Name="ItemBorder"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter Margin="4,2"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder"
                                                Property="Background"
                                                Value="{StaticResource Combo.Item.Hover}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder"
                                                Property="Background"
                                                Value="{StaticResource Combo.Item.Hover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>
