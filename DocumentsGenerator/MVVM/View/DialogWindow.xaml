<Window x:Class="DocumentsGenerator.MVVM.View.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DocumentsGenerator.MVVM.View"
        xmlns:c="clr-namespace:DocumentsGenerator.Controls"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Width="375"
        Height="200">

    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>

            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Template" Value="{DynamicResource VerticalScrollBar}"/>
                </Trigger>

                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Template" Value="{DynamicResource HorizontalScrollBar}"/>
                </Trigger>

            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid>

                <Border Background="#0E0E1B" Width="10"/>

                <Track x:Name="PART_Track" IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>

                        <RepeatButton
                    Margin="3"
                    Command="ScrollBar.PageUpCommand"
                    Style="{StaticResource ScrollBarTrackVertical}"/>
                    </Track.DecreaseRepeatButton>

                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumbVertical}"/>
                    </Track.Thumb>

                    <Track.IncreaseRepeatButton>

                        <RepeatButton
                    Margin="3"
                    Command="ScrollBar.PageDownCommand"
                    Style="{StaticResource ScrollBarTrackVertical}"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid>

                <Border Background="#0E0E1B" Height="10"/>

                <Track x:Name="PART_Track" IsDirectionReversed="False" Orientation="Horizontal">
                    <Track.DecreaseRepeatButton>

                        <RepeatButton
                    Margin="3"
                    Command="ScrollBar.PageLeftCommand"
                    Style="{StaticResource ScrollBarTrackHorizontal}"/>
                    </Track.DecreaseRepeatButton>

                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollBarThumbHorizontal}"/>
                    </Track.Thumb>

                    <Track.IncreaseRepeatButton>

                        <RepeatButton
                    Margin="3"
                    Command="ScrollBar.PageRightCommand"
                    Style="{StaticResource ScrollBarTrackHorizontal}"/>
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Border x:Name="Navbar" Background="#272547" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <Border Background="{Binding NavbarColor}" CornerRadius="5 5 0 0" MouseDown="Border_MouseDown">
                <Grid VerticalAlignment="Stretch">
                    <TextBlock Text="{Binding Title}"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="8 2 2 2"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">            
                        <c:NavbarButton x:Name="CloseBtn"
                                        Width="30"
                                        Height="30"
                                        Foreground="White"
                                        IconImage="/Images/close-icon.png"
                                        Click="CloseBtn_Click"
                                        Style="{StaticResource NavbarButtonTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
                

            <!-- Icon -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image x:Name="IconInfo" Source="/Images/info-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconError" Source="/Images/error-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconWarning" Source="/Images/warning-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconQuestion" Source="/Images/question-icon.png" Width="50" Height="50" Visibility="Collapsed"/>

                <!-- Message -->


                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                              Margin="10 10 0 10">
                    <TextBlock VerticalAlignment="Center"
                               Text="{Binding Message}"
                               Foreground="White"
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </ScrollViewer>
                


            </Grid>
            

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="BtnYes" Content="Tak" Width="96" Margin="6" Click="BtnYes_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnNo" Content="Nie" Width="96" Margin="6" Click="BtnNo_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnOk" Content="Ok" Width="96" Margin="6" IsDefault="True" Click="BtnOk_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnCancel" Content="Anuluj" Width="96" Margin="6" IsCancel="True" Click="BtnCancel_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
