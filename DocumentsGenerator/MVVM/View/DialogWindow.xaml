<Window x:Class="DocumentsGenerator.MVVM.View.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DocumentsGenerator.MVVM.View"
        xmlns:c="clr-namespace:DocumentsGenerator.Controls"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Width="320"
        Height="180">
    <Border x:Name="Navbar" Background="#272547" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <Border Background="{Binding NavbarColor}" CornerRadius="5 5 0 0" MouseDown="Border_MouseDown">
                <Grid VerticalAlignment="Stretch">
                    <TextBlock Text="{Binding Title}"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="8 2 2 2"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">            
                        <c:NavbarButton x:Name="CloseBtn"
                                        Width="30"
                                        Height="30"
                                        Foreground="White"
                                        IconImage="/Images/close-icon.png"
                                        Click="CloseBtn_Click"
                                        Style="{StaticResource NavbarButtonTheme}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
                

            <!-- Icon -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image x:Name="IconInfo" Source="/Images/info-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconError" Source="/Images/error-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconWarning" Source="/Images/warning-icon.png" Width="50" Height="50" Visibility="Collapsed"/>
                <Image x:Name="IconQuestion" Source="/Images/question-icon.png" Width="50" Height="50" Visibility="Collapsed"/>

                <!-- Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Message}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="5 0 10 0"
                           TextWrapping="Wrap" FontSize="14" />
            </Grid>
            

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button x:Name="BtnYes" Content="Yes" Width="96" Margin="6" Click="BtnYes_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnNo" Content="No" Width="96" Margin="6" Click="BtnNo_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnOk" Content="OK" Width="96" Margin="6" IsDefault="True" Click="BtnOk_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
                <Button x:Name="BtnCancel" Content="Cancel" Width="96" Margin="6" IsCancel="True" Click="BtnCancel_Click" Visibility="Collapsed" Foreground="White" Background="{Binding ButtonColor}" Style="{StaticResource MainButtonTheme}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
